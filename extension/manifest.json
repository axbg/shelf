{
    "name": "shelf",
    "version": "1.0",
    "description": "Your seamless bookmark manager",
    "permissions": [
        "storage",
        "identity",
        "cookies",
        "*://*.google.com/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "32": "icons/32.png"
        },
        "default_title": "shelf",
        "default_popup": "index.html"
    },
    "manifest_version": 2,
    "key": "CHROME_APP_PUBLIC_KEY",
    "oauth2": {
        "client_id": "WEB_APP_CLIENT_ID_TOKEN.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/userinfo.email"
        ]
    }
}